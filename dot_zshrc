# User configuration

# export MANPATH="/usr/local/man:$MANPATH"
# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Compilation flags
# export ARCHFLAGS="-arch x86_64"
function take(){
  if [[ $# -eq 1 ]]; then
      if [[ ! -d $1 && ! -f $1 ]]; then
	    mkdir -p $1 && cd $1
      elif [[ -d $1 ]]; then
	    cd $1
      elif [[ -f $1 ]]; then
	    xdg-open $1
      else 
	    echo "Cannot process further"
	    return 1
      fi  
  else 
      echo "Can Only accept One argument"
      return 1
  fi
}
function edit(){
   if [[ $# -eq 1  && -a $1 ]]; then
     $EDITOR $1 && chezmoi add $1
   else
     return 1
   fi 
}
export VI_MODE_SET_CURSOR=true
export EDITOR='nvim'
